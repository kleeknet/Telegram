<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" >
    <item android:state_pressed="true">
        <shape>
            <gradient android:centerColor="#9d6ac6"
                android:startColor="#9d6ac6"
                android:endColor="#9d6ac6"
                android:angle="270"/>
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:centerColor="#0065be60"
                android:startColor="#0065be60"
                android:endColor="#0065be60"
                android:angle="270"/>
        </shape>
    </item>

</selector>
